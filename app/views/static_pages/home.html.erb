<% if logged_in? %> <div class="row">
    <aside class="col-md-4">
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
            <%= render 'microposts/form' %>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'users/follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.feed.count %>)</h3>

            <%= render 'microposts/search', targetPath: root_path %>

            <ol class="microposts">
                <%= render @feed_items %>
            </ol>
            <%= will_paginate @feed_items %>
        <% end %>
    </div>
</div>
<% else %>
<div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>
    <h2>
        This is the home page for the
        <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a> sample application.
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200px"), "https://rubyonrails.org/" %>
<% end %>